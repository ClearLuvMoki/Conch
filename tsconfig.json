{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/constant/*": [
        "./constant/*"
      ],
      "@/Utils/*": [
        "./Utils/*"
      ],
      "@/src/*": [
        "./src/*"
      ],
      "@/Components/*": [
        "./src/Components/*"
      ],
      "@/Layout/*": [
        "./src/Layout/*"
      ],
      "@/Pages/*": [
        "./src/Pages/*"
      ],
      "@/Router/*": [
        "./src/Router/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
