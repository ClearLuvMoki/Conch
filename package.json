{
  "name": "conch",
  "private": true,
  "version": "0.1.0",
  "main": "src/main/index.ts",
  "author": "ClearLuvMoki <2893096286@qq.cn>",
  "scripts": {
    "dev": "npm run dev:render",
    "dev:render": "cross-env PORT=8889 rspack serve -c ./rspack/render/render.dev.js",
    "dev:main": "electronmon -r ts-node/register/transpile-only .",
    "build": "npm run build:main &&  npm run build:renderer && electron-builder build --publish never",
    "build:main": "rspack build -c ./rspack/main/main.prod.js",
    "build:renderer": "rspack build -c ./rspack/render/render.prod.js",
    "package": "electron-builder build --publish never",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@antv/g2": "^5.1.6",
    "@electron/rebuild": "^3.3.0",
    "@nextui-org/react": "^2.1.13",
    "@rspack/cli": "latest",
    "@types/deep-equal": "^1.0.3",
    "@types/node": "^20.8.7",
    "@types/node-os-utils": "^1.3.3",
    "@types/os-utils": "^0.0.3",
    "@types/react": "18.2.0",
    "@types/react-dom": "18.2.1",
    "@types/sortablejs": "^1.15.4",
    "autoprefixer": "^10.4.16",
    "await-to-js": "^3.0.0",
    "better-sqlite3": "^8.0.0",
    "class-validator": "^0.14.0",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.10",
    "deep-equal": "^2.2.2",
    "electron": "^27.0.1",
    "electron-builder": "^24.6.4",
    "electron-log": "^4.4.8",
    "electronmon": "^2.0.2",
    "framer-motion": "^10.16.4",
    "native-addon-loader": "^2.0.1",
    "node-os-utils": "^1.3.7",
    "node-wifi": "^2.0.16",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.3",
    "postcss-nesting": "^12.0.1",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^4.11.0",
    "react-nice-avatar": "^1.4.1",
    "react-router-dom": "^6.17.0",
    "react-use": "^17.4.0",
    "sortablejs": "^1.15.0",
    "tailwindcss": "^3.3.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.17",
    "typescript": "^5.0.4"
  },
  "electronmon": {
    "patterns": [
      "!./src/render/**/*",
      "!node_modules",
      "./index.html"
    ]
  },
  "build": {
    "appId": "com.conch.clearluvmoki",
    "icon": "icon.icns",
    "asar": true,
    "productName": "Conch",
    "asarUnpack": [
      "**\\*.{node,dll}"
    ],
    "publish": [
      {
        "provider": "generic",
        "url": ""
      }
    ],
    "win": {
      "icon": "app/resources/desktop-icon.png",
      "target": [
        "nsis"
      ],
      "publisherName": "Hangzhou Tianhuilan Technology Co., Ltd.",
      "requestedExecutionLevel": "asInvoker",
      "rfc3161TimeStampServer": "http://timestamp.digicert.com",
      "timeStampServer": "http://timestamp.digicert.com"
    },
    "directories": {
      "app": "app",
      "output": "release"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Conch",
      "deleteAppDataOnUninstall": true
    }
  }
}
